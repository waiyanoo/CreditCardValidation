@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                <h3>Credit Card Validation</h3>
            </div>
            <div class="col-md-4">
                <label>Card Type</label>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <select id="credit_card_type" class="form-control"></select>
                </div>
            </div>
            <div class="col-md-4">
                <label>Card Number</label>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <input class="form-control" id="credit_card_number" maxlength="19" name="credit_card_number" type="text" value="" placeholder="Card number (Required)">               
                </div>
            </div>
            <div class="col-md-8 col-md-offset-4">
                <lable id="credit_card_number_invalid" hidden style="color:red">Please enter valid card number</lable>
            </div>
            <div class="col-md-4">
                <label>Expiry Date</label>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <select id="credit_card_expired_month" class="form-control">
                        <option value=""></option>
                    </select>
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <select id="credit_card_expired_year" class="form-control">
                        <option value=""></option>
                    </select>
                    
                </div>
            </div>
            <div class="col-md-8 col-md-offset-4">
                <lable id="credit_card_expire_month_invalid" hidden style="color:red">Expire month is Invalid</lable>
                <lable id="credit_card_expire_year_invalid" hidden style="color:red">Expire year is Invalid</lable>
            </div>
        </div>
        <div class="form-group">
            <input id="validate_card" class="btn btn-primary" type="button" value="Validate Card" />
        </div>
    </div>
    <div class="col-md-12" id="success_message" style="text-align:center; color: green"><h2>Card Validate Successful</h2></div>
    <div class="col-md-12" id="error_message" style="text-align:center; color: red"><h2>Card Does not Exit</h2></div>

</div>
